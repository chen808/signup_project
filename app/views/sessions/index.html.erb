<div id="container">

<!-- Sign In Form -->
<h1>New Member Sign In</h1>
<form action="/sessions/create" method="post" role="form">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <p>
    <label for="name">Name</label>
    <input type="text" class="form-control" name="user[name]" placeholder="Enter Name">
  </p>

  <p>
    <label for="email">Email</label>
    <input type="text" class="form-control" name="user[email]" placeholder="Enter email">
  </p>

  <p>
    <label for="password">Password</label>
    <input type="password" class="form-control" name="user[password]" placeholder="Enter password">
  </p>
  <button type="submit" class="btn btn-default">Log In</button>
</form>

</div>